<h1><%= @restaurant.name %></h1>

<p><strong>Reviews:</strong> <% @restaurant.reviews.each do |review| %>
  <ul>
    <li><%= review.content %></li>
    <li><%= review.rating %></li>
  </ul>
<% end %>
</p>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>

<%= link_to '< Back to all restaurants', restaurants_path, class: "btn btn-primary" %>
